#loading
  width: 100%
  height: 100%
  position: fixed
  top: 0
  left: 0px
  z-index: 10
  text-align: center
  color: white
  background: gradientTop


  /* Old browsers */
  /* IE9 SVG, needs conditional override of 'filter' to 'none' */
  background: url("data:image/svg+xml base64,")
  background: -moz-linear-gradient(top, gradientTop 0%, gradientBot 100%); /* FF3.6+ */
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,gradientTop), color-stop(100%,gradientBot)); /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(top,  gradientTop 0%,gradientBot 100%); /* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(top,  gradientTop 0%,gradientBot 100%); /* Opera 11.10+ */
  background: -ms-linear-gradient(top,  gradientTop 0%gradientBot 100%); /* IE10+ */
  background: linear-gradient(to bottom,  gradientTop 0%,gradientBot 100%); /* W3C */
  background-attachment: fixed

#loading-spinner, #lightbox-spinner, #masonry-spinner
  position: absolute
  top: 50%
  left: 50%
  margin-top: -14px
  margin-left: -14px
  color: white
  width: 24px
  height: 28px
  text-align: center
  padding: 0px 2px
