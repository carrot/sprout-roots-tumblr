#title
  font-size: 24px
  font-weight: bold
  text-align: center
  padding: 10px 0

#intro
  color: white

  section
    padding: 10px 10px
    background-color: whiteTrans(0.1)
    width: 250px

.posts-permalink #intro
  position: absolute
  top: 0
  left: 20px

#headshot
  cursor: pointer
  transition: 0.5s all

  &:hover
    background-color: whiteTrans(0.2)

.headshot
  border-radius: 4px

.headshot-description
  border-top-left-radius: 4px
  border-top-right-radius: 4px

.headshot-none
  display: none

#description
  font-size: 15px
  line-height: 1.3
  padding-top: 20px
  margin-top: 1px
  border-bottom-left-radius: 4px
  border-bottom-right-radius: 4px

  a
    color: inherit
    text-decoration: none
    border-bottom: 1px solid whiteTrans(0.3)

    &:hover
      border-bottom: 1px solid whiteTrans(0.7)

.description-headshot-none
  border-top-left-radius: 4px
  border-top-right-radius: 4px

.av-circle
  border-radius: 33px

  img
    border-radius: 32px

.av-square
  border-radius: 4px

  img
    border-radius: 3px

.av-none
  display: none

#portrait
  text-align: center
  background-color: white
  width: 128px
  height: 128px
  padding: 2px 2px 2px 2px
  margin-top: 10px
  margin-left: auto
  margin-right: auto

  .av-circle
    border-radius: 65px

    img
      border-radius: 64px

.portrait
  margin-bottom: 10px

.portrait-title
  margin-bottom: 5px

#menu
  font-size: 14px
  font-weight: 700
  width: 270px
  margin-top: 20px

#menu-list
  list-style-type: none

  li
    background-color: whiteTrans(0.1)
    margin-bottom: 1px
    transition: 0.5s all

    &:hover
      background-color: whiteTrans(0.2)

    &:first-child
      border-top-left-radius: 4px
      border-top-right-radius: 4px

    &:last-child
      border-bottom-left-radius: 4px
      border-bottom-right-radius: 4px

  a
    color: white
    text-decoration: none
    width: 250px
    padding: 10px 10px 12px 10px
    display: block

a#credit
  margin-top: 19px
  -webkit-margin-before: 17px
  display: block
  font-weight: bold
  text-transform: uppercase
  font-size: 10px
  opacity: 0.2
  color: white
  text-decoration: none
  transition: 0.5s all
  line-height: 1

  &:hover
    text-decoration: none
    opacity: 0.3
