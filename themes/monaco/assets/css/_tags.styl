#tags
  text-align: center
  margin-top: 1px
  line-height: 2.2
  border-bottom-left-radius: 4px
  border-bottom-right-radius: 4px

  a
    text-decoration: none
    color: white
    transition: 0.5s all
    margin-right: 10px
    padding: 3px 8px 5px 5px
    border-radius: 4px
    font-weight: bold

    &:hover
      background-color: whiteTrans(0.2)

#tags i
  vertical-align: -2px

#lightbox #tags a:hover
  background-color: whiteTrans(0)
  text-decoration: underline

.tags-2hashtag i
  display: none

.tags-2hashtag a:before
  content: "#"

.tags-3hide, #lightbox #tags.tags-3hide
  display: none

#tag-page-summary
  color: white
  font-weight: bold
  font-size: 25px
  margin: 50px 0 30px 0
